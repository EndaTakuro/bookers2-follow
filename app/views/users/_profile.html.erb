<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>

	<tr>
		<th>follows</th>
		<th><%= link_to user.following.count, user_following_path(user) %></th>
	</tr>

	<tr>
		<th>followers</th>
		<th><%= link_to user.followers.count, user_followers_path(user) %></th>
	</tr>

	<tr>
		<th>
			<% if user.id != current_user.id %>
				<% if current_user.following?(user) %>
			     <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-info col-xs-13 col-xs-offset-1", method: :POST %>
			   <% else %>
			     <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class: "btn btn-success col-xs-13 col-xs-offset-1", method: :POST %>
			   <% end %>
			<% end %>
   		</th>
   </tr>

</table>

<div class="row">
	<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>